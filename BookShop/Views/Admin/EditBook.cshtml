@model BookShop.ViewModels.VmAdminEditBook
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <style>
        body {
            background-color: #FDF7E4;
        }
    </style>
</head>
<body>


    <script src="~/Content/js/cdnjs.cloudflare.com_ajax_libs_popper.js_1.11.0_umd_popper.min.js"></script>
    <script src="~/Content/js/code.jquery.com_jquery-3.7.1.min.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>
    <!-- Navbar -->
    <nav class=" nav navbar navbar-expand-lg navbar-light   " style="background-color: #fceec2;">
        <!-- Container wrapper -->
        <div class="container">
            <!-- Navbar brand -->
            <a class="navbar-brand" href="#"> <img src="~/Content/images/logo.png" alt="Bootstrap" width="200" height="30"></a>


            <!-- Toggle button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- Left links -->
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0  ">
                    <li class="nav-item" style="padding-top:8px ; padding-left:17px ;">
                        <a class="nav-link active d-flex flex-column me-3 " aria-current="page" href="#"><span class="large " style="color: #CB8C2F;">Manage Books</span></a>
                    </li>

                    <li class="nav-item" style="padding-top:8px ; padding-left:17px ;">
                        <a class="nav-link active d-flex flex-column me-3 " aria-current="page" href="#"><span class="large " style="color: #CB8C2F;">Orders</span></a>
                    </li>
                </ul>
                <!-- Left links -->
            </div>
            <!-- Collapsible wrapper -->
        </div>
        <!-- Container wrapper -->
    </nav>



    <div class="container container " style="margin-top:20px;   box-shadow: black; background-color:#fceec2;">
        <div class="shadow card-body p-4 p-lg-5   ">
            <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;  ">Edit BOOK</h2>

            @using (Html.BeginForm("EditBookProcess", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(model => model.book.id)
                @Html.HiddenFor(model => model.book.categoryId)


                <div class="form-outline mb-4">
                    <h5 class="form-label" for="form2Example17">Name</h5>
                    @Html.TextBoxFor(model => model.book.name, "", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(model => model.book.name, "", new { style = "color:red" })
                </div>

                <div class="form-outline mb-4">
                    <h5 class="form-label" for="form2Example17">Author Name</h5>
                    @Html.TextBoxFor(model => model.book.authorName, "", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(model => model.book.authorName, "", new { style = "color:red" })
                </div>

                <div class="form-outline mb-4">
                    <h5 class="form-label" for="form2Example17">Price</h5>
                    @Html.TextBoxFor(model => model.book.price, "", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(model => model.book.price, "", new { style = "color:red" })
                </div>

                <div class="form-outline mb-4">
                    <h5 class="form-label" for="form2Example17">Edition</h5>
                    @Html.TextBoxFor(model => model.book.edition, "", new { @class = "form-control form-control-lg" })
                </div>

                <div class="form-outline mb-4">
                    <h5 class="form-label" for="form2Example17">Quantity</h5>
                    @Html.TextBoxFor(model => model.book.qunatity, "", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(model => model.book.qunatity, "", new { style = "color:red" })
                </div>


                <div class="form-outline mb-4">
                    <h5 class="form-label" for="form2Example17">Statues</h5>
                    @Html.TextBoxFor(model => model.book.status, "", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(model => model.book.status, "", new { style = "color:red" })
                </div>

                <div class="form-outline mb-4">
                    <h5 class="form-label" for="form2Example17">Popularity</h5>
                    @Html.TextBoxFor(model => model.book.popularity, "", new { @class = "form-control form-control-lg" })
                    @Html.ValidationMessageFor(model => model.book.popularity, "", new { style = "color:red" })
                </div>




                <div class="form-outline mb-4">
                    <h5 class="form-label" for="form2Example17">Upload Picture </h5>
                    @Html.TextBoxFor(model => model.imageFile, new { type = "file", accept = "image/*", id = "image" })
                </div>


                <div class="pt-1 mb-4">
                    <button class="btn  btn-lg btn-block" style="background-color: #CB8C2F; " type="submit">SAVE CHANGES</button>
                </div>


            }

        </div>
    </div>


    <!-- Footer -->
    <footer class="bg-body-tertiary text-center text-lg-start" style="padding-top: 12px;">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2023 Copyright:
            <a class="text-body" href="#">BOOK STORE.com</a>
        </div>
        <!-- Copyright -->
    </footer>
</body>
</html>